<UserControl x:Class="Feedy.Views.UserControls.ErrorState"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:Feedy.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="55"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <iconPacks:PackIconMaterial x:Name="Icon"  Width="40" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
     <!--   <Image x:Name="Image" Source="..\..\Resources\Images\GreenRunner.png" /> -->
        <Image x:Name="Image" Source="..\..\Resources\Images\RunningMan_Green.jpg"/>
        <Border Grid.Column="1" Background="#7FD3D3D3" CornerRadius="10,10,10,10" Margin="2,2,10,2">
            <TextBlock x:Name="TB_Message" Text="Message" VerticalAlignment="Center" FontSize="{StaticResource FontSizeLarge}" Margin="10,0"/>
        </Border>
    </Grid>
</UserControl>
