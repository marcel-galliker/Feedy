using EZ_Editor.Models;
using GE_Utilities;
using System;
using System.Threading.Tasks;
using System.Windows;
using System.Windows.Controls;
using System.Windows.Threading;

namespace EZ_Editor.Views.Splash
{
    /// <summary>
    /// Interaction logic for Splash.xaml
    /// </summary>
    public partial class Splash : Window
    {
        public Splash()
        {
        //    EzGlobals.GeTrace.Write("Splash.Creator start");
            InitializeComponent();
        //    Ge.Trace("Splash.Creator end");
        }

        private void Window_Loaded(object sender, RoutedEventArgs e)
        {
         //   Ge.Trace("Splash.Window_Loaded start");
            GeScreen.RemoveSysMenu(this);
            Task.Run(() => 
            { 
                Dispatcher.Invoke(() =>
                {
                    EzGlobals.MainWindow = new MainWindow();
                    EzGlobals.MainWindow.Show();
                    Close();
                });
            });
         //   Ge.Trace("Splash.Window_Loaded end");
        }
    }
}
