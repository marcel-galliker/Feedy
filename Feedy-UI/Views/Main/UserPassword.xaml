<Popup x:Class="Feedy.Views.Main.UserPassword"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:utilities="clr-namespace:GE_Utilities"
             xmlns:local="clr-namespace:Feedy.Views.Main"
             AllowsTransparency ="True"
             Placement="Relative"
             HorizontalOffset="-2"
             VerticalOffset="-7"
             Opened="Popup_Opened"
             Closed="Popup_Closed"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border CornerRadius="10"
                HorizontalAlignment="Stretch"
                Background="{StaticResource View.Header.Background.Brush}"
                >
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Password" Margin="0,0,10,0"/>
                <!-- <PasswordBox x:Name="TB_Password" Width="100" KeyDown="TB_Password_KeyDown"/> -->
                <utilities:GeTextBox x:Name="TB_Password" Width="100" KeyDown="TB_Password_KeyDown" TextChanged="TB_Password_TextChanged"/>
                <TextBox x:Name="TB_ShowPassword" Width="100" Foreground="Red"/>
            </StackPanel>
        </Border>
    </Grid>
</Popup>
