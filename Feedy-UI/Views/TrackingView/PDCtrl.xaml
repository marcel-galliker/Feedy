<UserControl x:Class="EZ_Editor.Views.TrackingView.PDCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:EZ_Editor.Views.TrackingView"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50"
             HorizontalAlignment="Left"
             VerticalAlignment="Bottom">
    
    <Button Width="45"
            Height="45"
            VerticalAlignment="Bottom" 
            HorizontalAlignment="Left" 
            Background="Transparent" 
            BorderThickness="0"
            Margin="-8,0,0,0">
        <Grid>
            <iconPacks:PackIconMaterial Grid.Row="0" Kind="ArrowDownBold" VerticalAlignment="Bottom" Foreground="LightGreen" Height="20" Width="20" Margin="2,0,0,2" Visibility="Visible"/>
            <iconPacks:PackIconMaterial Grid.Row="0" Kind="ArrowDownBoldOutline" VerticalAlignment="Bottom" Foreground="{StaticResource EzEditor.Brush.Dark.Foreground}" Height="25" Width="25"/>
        </Grid>
    </Button>
</UserControl>
