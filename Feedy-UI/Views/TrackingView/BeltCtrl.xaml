<UserControl x:Class="EZ_Editor.Views.TrackingView.BeltCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:EZ_Editor.Views.TrackingView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             >
    <Grid Margin="1,0">
        <Rectangle Height="20" Fill="White"  RadiusX="10" RadiusY="10" Stroke="DarkGray" StrokeThickness="1" Margin="3,0,0,0"/>
        <Rectangle Height="16" Width="16" HorizontalAlignment="Left" Fill="{StaticResource EzEditor.Brush.Dark.Foreground}"  RadiusX="8" RadiusY="8"  Margin="5,2,0,2"/>
        <Rectangle Height="16" Width="16" HorizontalAlignment="Right" Fill="{StaticResource EzEditor.Brush.Dark.Foreground}"  RadiusX="8" RadiusY="8" Margin="2"/>
    </Grid>
</UserControl>
